{
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    }
}
